.white{
	color: white;
}

.actions{
	margin-bottom: 15px;
}

.exo-font{
    font-family: 'Exo', sans-serif;
}

.center-gif-background-tickets{
	padding-bottom: 80px;
	padding-top: 100px;
	background-image: url(<%= asset_path "giphy3.gif"%>) !important;
	background-position: center;
	background-repeat: no-repeat;
}

@media (max-width:440px) {
	.center-gif-background-tickets{
		padding-bottom: 70px;
		padding-top: 0px;
	}
}

.center-gif-background-lineup{
	padding-bottom: 170px;
	padding-top: 200px;
	background-image: url(<%= asset_path "giphy4.gif"%>) !important;
	background-position: center;
	background-repeat: no-repeat;
}

@media (max-width:440px) {
	.center-gif-background-lineup{
		padding-bottom: 70px;
		padding-top: 70px;
	}
}

.repeat-gif-background-date{
	background-image: url(<%= asset_path "echo.gif" %>) !important;
	background-position: center;
	background-repeat: no-repeat;
}

@media (max-width:440px) {
	.repeat-gif-background-date{
		padding-bottom: 0px;
		padding-top: 0px;
	}
}

.black-text{
    color: black;
}