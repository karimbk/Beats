/* The Modal (background) */
.modal {
    display: none; /* Hidden by default */
    position: fixed; /* Stay in place */
    z-index: 11; /* Sit on top */
    left: 0;
    top: 0;
    width: 100%; /* Full width */
    height: 100%; /* Full height */
    overflow: auto; /* Enable scroll if needed */
    background-color: rgb(0,0,0); /* Fallback color */
    background-color: rgba(0,0,0,0.4); /* Black w/ opacity */
}

.modal-open {
    display: block; 
  }

/* Modal Content/Box */
.modal-content {
    background-color: #fefefe;
    margin: 10% auto; /* 15% from the top and centered */
    padding: 20px;
    border: 1px solid #888;
    width: 80%; /* Could be more or less, depending on screen size */
    height:80%;
}

.modal-text{
	margin-top: 35vh;
	font-size: 20px;
}

.modal-btn-confirm{
	position: absolute;
	border-color: green;
	bottom: 16px;
	right: 16px;
}

.modal-btn-aboard{
	position: absolute;
	border-color: red;
	color: red;
	bottom: 16px;
	right: 205px;
}
@media (max-width:440px) {
	.modal-btn-aboard{
	position: absolute;
	border-color: red;
	color: red;
	bottom: 70px;
	right: 16px;
	}
}
/* The Close Button */
.close {
    color: #aaa;
    float: right;
    font-size: 28px;
    font-weight: bold;
}

.close:hover,
.close:focus {
    color: black;
    text-decoration: none;
    cursor: pointer;
}