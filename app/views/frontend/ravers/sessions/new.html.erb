<% content_for :video_background, "#{asset_path "beats4.mp4"}" %>
<% content_for :css_class, "new-gif" %>
<% content_for :video_class, "not-centred" %>

<div class=" list-new">
  <h3 class="mailing-list-heading"><i class="fa fa-heart" style="font-size:50px;"aria-hidden="true"></i><br><br>Log in</h3>
  <div class="row">
    <%= form_for(resource, as: resource_name, url: session_path(resource_name), :html => {class: 'form-horizontal col-xs-12 col-sm-2 col-sm-offset-5' }) do |f| %>
      <div class="form-group">
        <%= f.label :email, class: "sr-only" %><br />
        <%= f.email_field :email, placeholder:"Email", autofocus: true, class: "form-control transparent" %>
        <%= f.label :password, class: "sr-only" %><br />
        <%= f.password_field :password, placeholder:"Password", autocomplete: "off", class: "form-control transparent" %>
      </div>
      <% if devise_mapping.rememberable? -%>
        <div class="form-group">
          <%= f.check_box :remember_me %>
          <%= f.label :remember_me, class: "white" %>
        </div>
      <% end -%>
      <div class="actions">
        <%= f.submit "Log in", class: "btn btn-danger" %>
      </div>
      <%= render "frontend/ravers/shared/links" %>
    <% end %>
  </div>
</div>